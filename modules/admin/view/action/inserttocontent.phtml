<div class="widgetbox">
    <div class="contenttitle radiusbottom0">
        <h2 class="table"><span>Odkaz</span></h2>
    </div><!--contenttitle-->

    <form class="stdform stdform2 nosubmit" method="post" action="#" >
        <p>
            <label>Text odkazu</label>
            <span class="field">
                <input type="text" name="link-name" id="link-name" />
            </span>
        </p>
        <p>
            <label>Akce</label>
            <span class="field">
                <select id="content" class="width99">
                    {if !empty($actions)}
                        {foreach $action in $actions}
                        <option value="{echo $action->getUrlKey()}">{echo $action->getTitle()}</option>
                        {/foreach}
                    {/if}
                </select>
            </span>
        </p>
        <p>
            <label>Cíl odkazu</label>
            <span class="field">
                <select id="link-target" class="width99">
                    <option value="_self">Aktuální</option>
                    <option value="_blank">Nový panel</option>
                </select>
            </span>
        </p>
    </form>
</div>