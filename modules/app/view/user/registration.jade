section.wrapper.login.singlePage
   .row
      .small-12.medium-12.large-12.columns
         .container
            header
               h2.fi-check Registrace
            form(method='post',action='#')
               |{if isset($errors["firstname"])}
               label.error.fi-alert
                  |{echo join("<br/>", $errors["firstname"])}
               |{/if}
               |{echo \App\Helper\FormPrinter::input('text', 'firstname', array($user,'firstname'), array('required'=>true, 'placeholder'=>'Jméno'))}

               |{if isset($errors["lastname"])}
               label.error.fi-alert
                  |{echo join("<br/>", $errors["lastname"])}
               |{/if}
               |{echo \App\Helper\FormPrinter::input('text', 'lastname', array($user,'lastname'), array('required'=>true, 'placeholder'=>'Příjmení'))}

               |{if isset($errors["phoneNumber"])}
               label.error.fi-alert
                  |{echo join("<br/>", $errors["phoneNumber"])}
               |{/if}
               |{echo \App\Helper\FormPrinter::input('tel', 'phone', array($user,'phoneNumber'), array('placeholder'=>'Kontaktní telefon'))}

               |{if isset($errors["email"])}
               label.error.fi-alert
                  |{echo join("<br/>", $errors["email"])}
               |{/if}
               |{echo \App\Helper\FormPrinter::input('email', 'email', array($user,'email'), array('required'=>true, 'placeholder'=>'Kontaktní email'))}

               |{if isset($errors["password"])}
               label.error.fi-alert
                  |{echo join("<br/>", $errors["password"])}
               |{/if}
               input(type='password',placeholder='Heslo',pattern=".{5,}",title='min. 5 znaků', name='password' required)

               |{if isset($errors["password2"])}
               label.error.fi-alert
                  |{echo join("<br/>", $errors["password2"])}
               |{/if}
               input(type='password',placeholder='Ověření hesla',pattern=".{5,}",title='min. 5 znaků', name='password2' required)

               input(type='submit', name='register', value='Registrovat')

               input(type="hidden", name="csrf", id="csrf", value!="{echo $token}")
               input(type="hidden", name="submstoken", id="submstoken", value!="{echo $submstoken}")
